        type: Sequelize.INTEGER,
      },
      name: {
        type: Sequelize.STRING,
        allowNull: false,
      },
      parentId: {
        type: Sequelize.INTEGER,
        allowNull: true,
        references: {
          model: 'Categories',
          key: 'id',
        },
        onDelete: 'CASCADE', //category con bị xóa nếu category cha bị xóa
      },
      createdAt: {
        allowNull: false,
        type: Sequelize.DATE,
